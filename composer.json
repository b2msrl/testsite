{
    "name": "padosoft/testsite",
    "description": "asd",
    "keywords": ["asd"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Padosoft",
            "email": "helpdesk@padosoft.com",
            "homepage" : "https://www.padosoft.com",
            "role" : "Developer"

        }
    ],
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.2.*",
		"guzzlehttp/guzzle": "~6.2",
        "mathiasgrimm/laravel-env-validator": "^1.1"
    },
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "symfony/css-selector": "2.8.*|3.0.*",
        "symfony/dom-crawler": "2.8.*|3.0.*",
		"barryvdh/laravel-ide-helper": "^2.1",
        "barryvdh/laravel-debugbar": "^2.0",
        "filp/whoops": "^1.1",
        "scrutinizer/ocular": "~1.1",
        "phpmd/phpmd": "2.*",
        "squizlabs/php_codesniffer": "2.*",
        "padosoft/hooks": "0.*",
        "padosoft/laravel-composer-security": "1.*"
    },
    "autoload": {
        "classmap": [
            "database",
			"tests/TestCase.php",
            "tests/TestBase.php",
            "tests/MailTestCase.php"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/TestBase.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan ide-helper:generate -M -H",
            "php artisan ide-helper:meta",			
            "php artisan optimize"
        ],
        "post-update-cmd": [
			"php artisan clear-compiled",
            "php artisan ide-helper:generate -M -H",
            "php artisan ide-helper:meta",			
            "php artisan optimize"

        ]
    },
    "config": {
        "preferred-install": "dist",
		"minimum-stability": "dev"
    }
}
